@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Password</h4>

        <div class="form-group">
            <div class="col-md-4">
                @Html.Password("password")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}
