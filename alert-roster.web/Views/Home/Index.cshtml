@model IEnumerable<alert_roster.web.Models.Message>

@{
    ViewBag.Title = "Alert Roster Home Page";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

@foreach (var message in Model)
{
    <div class="row">
        <div class="col-md-4">
            <h2>@message.PostedDate</h2>
            <p>
                @message.Content
            </p>
        </div>
    </div>
}